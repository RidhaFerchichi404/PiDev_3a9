<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="gui.ProfileCardController" prefWidth="300" prefHeight="120" styleClass="profile-card">
    <children>
        <!-- Affichage du nom -->
        <Label fx:id="nameLabel" layoutX="10" layoutY="10" text="Nom du profil" styleClass="profile-name"/>
        <!-- Affichage de l'email -->
        <Label fx:id="emailLabel" layoutX="10" layoutY="35" text="Email" styleClass="profile-email"/>
        <!-- Bouton de modification -->
        <Button fx:id="modifyButton" layoutX="200" layoutY="20" text="Modifier" styleClass="modify-button"
                onAction="#handleModify"/>
        <!-- Bouton de suppression -->
        <Button fx:id="deleteButton" layoutX="200" layoutY="60" text="Supprimer" styleClass="delete-button"
                onAction="#handleDelete"/>
    </children>
</AnchorPane>

