<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="gui.ClientModifyController"
      spacing="20"
      style="-fx-padding: 30; -fx-background-color: #1e1e1e;"> <!-- Matching padding and background color -->

    <!-- First Name -->
    <TextField fx:id="txtFirstName" promptText="First Name"
               style="-fx-background-color: #333; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 12px 15px; -fx-pref-width: 300;" />

    <!-- Last Name -->
    <TextField fx:id="txtLastName" promptText="Last Name"
               style="-fx-background-color: #333; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 12px 15px; -fx-pref-width: 300;" />

    <!-- Email -->
    <TextField fx:id="txtEmail" promptText="Email"
               style="-fx-background-color: #333; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 12px 15px; -fx-pref-width: 300;" />

    <!-- Phone Number -->
    <TextField fx:id="txtPhoneNumber" promptText="Phone Number"
               style="-fx-background-color: #333; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 12px 15px; -fx-pref-width: 300;" />

    <!-- CIN -->
    <TextField fx:id="txtCin" promptText="CIN"
               style="-fx-background-color: #333; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 12px 15px; -fx-pref-width: 300;" />

    <!-- Save Button -->
    <Button fx:id="btnSave" text="Save Changes" onAction="#saveChanges"
            style="-fx-font-size: 16px; -fx-background-color: #ff6600; -fx-text-fill: white; -fx-padding: 15px 25px; -fx-border-radius: 5px; -fx-pref-width: 200;" />
</VBox>
