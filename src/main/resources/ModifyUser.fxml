<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="gui.ModifyUserController"
          xmlns:fx="http://javafx.com/fxml"
          alignment="center" hgap="10" vgap="10">
    <Label text="First Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="txtName" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Last Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="txtEmail" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <!-- Add more fields as necessary -->

    <Button text="Save" onAction="#saveChanges" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
</GridPane>
