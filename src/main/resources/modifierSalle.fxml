<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" style="-fx-background-color: #1a1a1a; -fx-padding: 20;"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="gui.ModifierSalleController">

    <VBox spacing="15" alignment="CENTER" AnchorPane.topAnchor="20.0"
          AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">

        <!-- ✅ Titre -->
        <Label text="📝 Modifier la Salle"
               style="-fx-font-size: 22px; -fx-text-fill: #ff8c00; -fx-font-weight: bold;" />

        <!-- ✅ Champs de saisie -->
        <VBox spacing="10" alignment="CENTER">
            <TextField fx:id="nomField" promptText="Nom de la salle"
                       style="-fx-padding: 8; -fx-font-size: 14px; -fx-background-radius: 5;" />
            <TextField fx:id="zoneField" promptText="Zone de la salle"
                       style="-fx-padding: 8; -fx-font-size: 14px; -fx-background-radius: 5;" />

            <!-- ✅ Sélection d'image -->
            <HBox spacing="10" alignment="CENTER">
                <TextField fx:id="imageUrlField" promptText="URL de l'image"
                           style="-fx-padding: 8; -fx-font-size: 14px; -fx-background-radius: 5;" />
                <Button text="📂 Choisir" fx:id="choisirImageButton" onAction="#choisirImage"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px;" />
            </HBox>

            <!-- ✅ Aperçu de l'image -->
            <ImageView fx:id="imagePreview" fitWidth="200" fitHeight="150"
                       style="-fx-border-color: #ff8c00; -fx-border-width: 2px;" preserveRatio="true" />
        </VBox>

        <!-- ✅ Boutons d'action -->
        <HBox spacing="20" alignment="CENTER">
            <Button fx:id="btnModifier" text="✔ Modifier" onAction="#handleModifier"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10 20;" />
            <Button fx:id="btnAnnuler" text="❌ Annuler" onAction="#annuler"
                    style="-fx-background-color: #ff4444; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10 20;" />
        </HBox>

    </VBox>
</AnchorPane>
