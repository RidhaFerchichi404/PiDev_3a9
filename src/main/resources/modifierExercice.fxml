<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="gui.ModifierExerciceController"
            style="-fx-background-color: #1a1a1a; -fx-padding: 20;">

    <VBox spacing="15" alignment="CENTER">
        <Label text="Modifier un Exercice" style="-fx-font-size: 22px; -fx-text-fill: #ff8c00;"/>

        <TextField fx:id="nomField" promptText="Nom de l'exercice"
                   style="-fx-font-size: 14px; -fx-pref-width: 300px;"/>

        <TextArea fx:id="descriptionField" promptText="Description de l'exercice"
                  wrapText="true" style="-fx-font-size: 14px; -fx-pref-width: 300px;"/>

        <Button text="Choisir une image" fx:id="choisirImageButton" onAction="#choisirImage"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>

        <ImageView fx:id="imagePreview" fitWidth="250" fitHeight="150" preserveRatio="true"/>

        <HBox spacing="15">
            <Button text="Enregistrer" fx:id="enregistrerButton" onAction="#enregistrerExercice"
                    style="-fx-background-color: #ff8c00; -fx-text-fill: white;"/>
            <Button text="Annuler" onAction="#fermerFenetre"
                    style="-fx-background-color: #ff4444; -fx-text-fill: white;"/>
        </HBox>
    </VBox>
</AnchorPane>
