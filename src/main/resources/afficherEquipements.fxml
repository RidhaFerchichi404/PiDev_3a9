<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="gui.AfficherEquipementsController"
            style="-fx-background-color: #000000; -fx-padding: 20;">

    <VBox spacing="20" alignment="TOP_CENTER">
        <!-- ✅ Titre et Bouton d'ajout bien placés -->
        <HBox alignment="CENTER_LEFT" spacing="20">
            <Label text="Équipements de la Salle"
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #ff8c00;"/>

            <Region HBox.hgrow="ALWAYS"/>

            <Button text="Ajouter Équipement" onAction="#ajouterEquipement"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white;
                           -fx-font-size: 14px; -fx-padding: 10 20;
                           -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand;"/>
        </HBox>

        <!-- ✅ Message affiché si aucun équipement disponible -->
        <Label fx:id="noEquipementsLabel" text="Aucun équipement disponible"
               style="-fx-font-size: 16px; -fx-text-fill: #ff4444; -fx-alignment: center;"
               visible="false"/>

        <!-- ✅ Conteneur des cartes avec défilement -->
        <ScrollPane fitToWidth="true" style="-fx-background: transparent;">
            <content>
                <FlowPane fx:id="cardsContainer" hgap="20" vgap="20"
                          style="-fx-background-color: black; -fx-padding: 10;"
                          prefWrapLength="800"/> <!-- ✅ Largeur max ajustée pour affichage côte à côte -->
            </content>
        </ScrollPane>
    </VBox>
</AnchorPane>
