<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml/1" 
      xmlns="http://javafx.com/javafx/17" 
      fx:controller="gui.AjouterSalleController">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Ajouter une nouvelle salle" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <GridPane vgap="10" hgap="10">
        <columnConstraints>
            <ColumnConstraints minWidth="100" prefWidth="120"/>
            <ColumnConstraints minWidth="200" prefWidth="250"/>
        </columnConstraints>

        <Label text="Nom :" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nomField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Zone :" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="zoneField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Description :" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextArea fx:id="descriptionField" GridPane.rowIndex="2" GridPane.columnIndex="1" 
                  prefRowCount="3" wrapText="true"/>

        <Label text="URL de l'image :" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="imageUrlField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER" style="-fx-padding: 20 0 0 0;">
        <Button text="Ajouter" onAction="#handleAjouter" 
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        <Button text="Annuler" onAction="#handleAnnuler" 
                style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
    </HBox>
</VBox>