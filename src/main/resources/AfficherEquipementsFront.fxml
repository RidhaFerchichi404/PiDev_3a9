<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="gui.AfficherEquipementsFrontController"
            prefWidth="600" prefHeight="500"  style="-fx-background-color: #000000; -fx-padding: 20;"> <!-- ✅ Fond noir uniforme -->

<VBox spacing="15"
      prefWidth="600" prefHeight="500"
      AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20"
      AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="20"
      style="-fx-padding: 15; -fx-alignment: center;"> <!-- ✅ Centrage du titre -->

<Label text="🏋️‍♂️ Liste des Équipements 🏋️‍♀️"
       style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #ff8c00; -fx-alignment: center;"/>

<ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED"
            style="-fx-background: BLACK; -fx-border-color: #ff8c00;">
    <FlowPane fx:id="cardsContainer" hgap="20" vgap="20"
              style="-fx-background-color: BLACK; -fx-alignment: center;"/>
</ScrollPane>

<Button text="Retour" fx:id="btnRetour" onAction="#retourner"
        style="-fx-background-color: #ff4444; -fx-text-fill: white;
                       -fx-font-weight: bold; -fx-background-radius: 10;"/>
</VBox>
        </AnchorPane>
