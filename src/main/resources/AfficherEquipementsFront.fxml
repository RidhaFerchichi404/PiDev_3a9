<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0"
            style="-fx-background-color: linear-gradient(to bottom, #121212, #000000); -fx-padding: 30;"
            xmlns="http://javafx.com/javafx/17.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="gui.AfficherEquipementsFrontController">

    <!-- Conteneur principal -->
    <VBox prefHeight="500" prefWidth="740" spacing="20"
          style="-fx-padding: 20; -fx-alignment: center; -fx-background-color: #000000; -fx-background-radius: 20;
                 -fx-effect: dropshadow(gaussian, rgba(255, 102, 0, 0.5), 20, 0, 4, 4);"
          AnchorPane.bottomAnchor="20"
          AnchorPane.leftAnchor="20"
          AnchorPane.rightAnchor="20"
          AnchorPane.topAnchor="20">

        <!-- Titre principal stylisé -->
        <Label text="🏋️‍♂️ Liste des Équipements 🏋️‍♀️"
               style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #FF6600;
                      -fx-effect: dropshadow(gaussian, rgba(255, 102, 0, 0.8), 10, 0, 2, 2);"
               alignment="CENTER" />

        <!-- ScrollPane pour les cartes avec fond noir -->
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" prefHeight="450.0" prefWidth="700.0"
                    style="-fx-background: transparent; -fx-background-color: transparent; -fx-border-color: #FF6600;
                           -fx-border-radius: 15; -fx-background-radius: 15;"
                    vbarPolicy="AS_NEEDED">
            <FlowPane fx:id="cardsContainer" hgap="30" vgap="30"
                      style="-fx-background-color: #000000; -fx-background-radius: 15;
                             -fx-padding: 20; -fx-alignment: center;" />
        </ScrollPane>

        <!-- Bouton Retour stylisé -->
        <Button fx:id="btnRetour"
                onAction="#retourner"
                text="⏪ Retour"
                style="-fx-background-color: linear-gradient(to right, #FF6600, #CC5200);
                       -fx-text-fill: #000000;
                       -fx-font-weight: bold;
                       -fx-font-size: 16px;
                       -fx-background-radius: 15;
                       -fx-cursor: hand;
                       -fx-padding: 12 24;
                       -fx-effect: dropshadow(gaussian, rgba(255, 102, 0, 0.5), 10, 0, 2, 2);" />
    </VBox>
</AnchorPane>
