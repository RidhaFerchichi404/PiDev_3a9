<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane minHeight="400" minWidth="600" prefHeight="700" prefWidth="900"
            style="-fx-background-color: #121212; -fx-padding: 20;"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="gui.AfficherSallesFrontController">

    <VBox spacing="20" alignment="CENTER" AnchorPane.topAnchor="20"
          AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">

        <!-- ✅ Titre avec un style moderne -->
        <Label text="🏋️ Sportify - Découvrez Nos Salles 🏋️"
               style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #ff8c00;" />

        <!-- ✅ Conteneur avec défilement fluide -->
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED"
                    style="-fx-background: transparent; -fx-border-color: #ff8c00; -fx-padding: 10;">
            <FlowPane fx:id="cardsContainer" hgap="30" vgap="30" prefHeight="520.0" prefWidth="800.0"
                      style="-fx-background-color: #1a1a1a; -fx-padding: 20; -fx-alignment: center;" />
        </ScrollPane>

        <!-- ✅ Navigation des images d'une salle -->
        <HBox spacing="20" alignment="CENTER">
            <Button fx:id="btnPrecedentImage" text="⬅ Précédente Image"
                    style="-fx-background-color: #555555; -fx-text-fill: white; -fx-font-size: 14px;"/>
            <Button fx:id="btnSuivantImage" text="Suivante Image ➡"
                    style="-fx-background-color: #ff8c00; -fx-text-fill: white; -fx-font-size: 14px;"/>
        </HBox>

        <!-- ✅ Navigation entre les salles -->
        <HBox spacing="20" alignment="CENTER">
            <Button fx:id="btnPrecedentSalle" text="⬅ Précédente Salle"
                    style="-fx-background-color: #555555; -fx-text-fill: white; -fx-font-size: 16px;"/>
            <Button fx:id="btnSuivantSalle" text="Suivante Salle ➡"
                    style="-fx-background-color: #ff8c00; -fx-text-fill: white; -fx-font-size: 16px;"/>
        </HBox>
    </VBox>

</AnchorPane>
