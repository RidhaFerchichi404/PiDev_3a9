<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane minHeight="400" minWidth="600" style="-fx-background-color: linear-gradient(to bottom, #1a1a1a, #121212); -fx-padding: 30;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.modifierPostsAdmin">
   <VBox alignment="CENTER" spacing="25" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <children>
         <HBox alignment="CENTER" prefHeight="29.0" prefWidth="600.0" spacing="15.0" style="-fx-padding: 10;">
            <children>
               <Label style="-fx-font-size: 14px; -fx-text-fill: white;" text="Description :" />
               <TextField fx:id="TFdescriptionModifier" promptText="Description" style="-fx-font-size: 14px; -fx-pref-width: 250px; -fx-padding: 10; -fx-background-radius: 10; -fx-border-color: #ff6600; -fx-border-radius: 10; -fx-text-fill: white; -fx-background-color: #1e1e1e;" />
               <Label style="-fx-font-size: 14px; -fx-text-fill: white;" text="Path d'image : " />
               <TextField fx:id="TFpathModifier" promptText="Path" style="-fx-font-size: 14px; -fx-pref-width: 250px; -fx-padding: 10; -fx-background-radius: 10; -fx-border-color: #ff6600; -fx-border-radius: 10; -fx-text-fill: white; -fx-background-color: #1e1e1e;" />
               <Label style="-fx-font-size: 14px; -fx-text-fill: white;" text="Type" />
               <RadioButton fx:id="RBpromotionModifier" mnemonicParsing="false" style="-fx-font-size: 14px; -fx-text-fill: white;" text="Promotion">
                  <toggleGroup>
                     <ToggleGroup fx:id="type" />
                  </toggleGroup>
               </RadioButton>
               <RadioButton fx:id="RBmarathonModifier" mnemonicParsing="false" style="-fx-font-size: 14px; -fx-text-fill: white;" text="Marathon" toggleGroup="$type" />
               <RadioButton fx:id="RBregimeModifier" mnemonicParsing="false" style="-fx-font-size: 14px; -fx-text-fill: white;" text="Regime" toggleGroup="$type" />
            </children>
         </HBox>
         <ScrollPane fitToHeight="true" fitToWidth="true">
            <content>
               <FlowPane fx:id="FPposts" style="-fx-border-color: #ff6600; -fx-border-width: 1; -fx-background-color: #1a1a1a; -fx-background-radius: 15; -fx-padding: 20;" />
            </content>
         </ScrollPane>
         <HBox alignment="CENTER" prefHeight="29.0" prefWidth="600.0" spacing="15.0" style="-fx-padding: 10;">
            <children>
               <Button fx:id="BTNmodifier" mnemonicParsing="false" onAction="#ModifierPoste" style="-fx-background-color: #ff6600; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 10 20; -fx-cursor: hand;" text="Modifier" />
               <Button fx:id="BTNsupprimer" mnemonicParsing="false" onAction="#SupprimerPoste" style="-fx-background-color: #ff6600; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 10 20; -fx-cursor: hand;" text="Supprimer" />
            </children>
         </HBox>
      </children>
   </VBox>
</AnchorPane>
