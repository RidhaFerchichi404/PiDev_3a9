<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="gui.AfficherImagesExerciceController"
            style="-fx-background-color: black;">

    <VBox spacing="10" alignment="CENTER" AnchorPane.topAnchor="10" AnchorPane.bottomAnchor="10"
          AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">

        <Label text="Images de l'exercice"
               style="-fx-text-fill: #ff8c00; -fx-font-size: 20px; -fx-font-weight: bold;"/>

        <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background-color: transparent;">
            <content>
                <FlowPane fx:id="imagesContainer" hgap="10" vgap="10" alignment="CENTER"
                          style="-fx-background-color: black; -fx-padding: 10;">
                </FlowPane>
            </content>
        </ScrollPane>

        <Button text="Fermer" onAction="#fermerFenetre"
                style="-fx-background-color: #ff4444; -fx-text-fill: white; -fx-font-weight: bold;
                       -fx-padding: 8 20; -fx-background-radius: 5;"/>
    </VBox>
</AnchorPane>
