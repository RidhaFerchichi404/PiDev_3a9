<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="gui.AfficherImagesExerciceController"
            style="-fx-background-color: #1a1a1a; -fx-padding: 20;">

    <VBox spacing="15" alignment="CENTER">
        <!-- ✅ Titre -->
        <Label text="📸 Images de l'Exercice"
               style="-fx-font-size: 24px; -fx-text-fill: #ff8c00; -fx-font-weight: bold;"/>

        <!-- ✅ Conteneur avec défilement horizontal -->
        <ScrollPane fitToWidth="true" fitToHeight="false" hbarPolicy="ALWAYS" vbarPolicy="NEVER"
                    style="-fx-background:  BLACK; -fx-border-color: #ff8c00; -fx-border-width: 1px; -fx-padding: 10;">
            <content>
                <TilePane fx:id="imagesContainer" hgap="20" vgap="20"
                          style="-fx-background-color: black; -fx-padding: 10;"
                          prefColumns="3" alignment="CENTER"/>
            </content>
        </ScrollPane>

        <!-- ✅ Bouton Fermer -->
        <Button fx:id="closeButton" text="❌ Fermer"
                onAction="#fermerFenetre"
                style="-fx-background-color: #ff4444; -fx-text-fill: white;
                       -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 10 20;"/>
    </VBox>
</AnchorPane>
