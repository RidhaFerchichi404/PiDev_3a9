      fx:controller="gui.UserListController"
      spacing="10"
      style="-fx-padding:20;">

    <!-- The "Modify" button at the top -->
    <Button text="Modifier Utilisateur Sélectionné"
            onAction="#handleModifyButtonClick"/>

    <!-- The FlowPane for cards -->
    <FlowPane fx:id="cardsContainer"
              hgap="10" vgap="10"/>
</VBox>
