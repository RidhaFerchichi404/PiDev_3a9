<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>

<VBox xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="gui.UserListController"
      spacing="10"
      style="-fx-padding:20;">

    <!-- The "Modify" button at the top -->
    <Button text="Modifier Utilisateur Sélectionné"
            onAction="#handleModifyButtonClick"/>

    <!-- Return to Menu button -->
    <Button text="Return to Menu"
            onAction="#returnToMenu"/>

    <!-- ScrollPane for scrollable cards -->
    <ScrollPane fx:id="scrollPane" fitToWidth="true" fitToHeight="true" vbarPolicy="AS_NEEDED" hbarPolicy="NEVER">
        <!-- The FlowPane for cards -->
        <FlowPane fx:id="cardsContainer"
                  hgap="10" vgap="10" />
    </ScrollPane>

</VBox>
