<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>

<VBox xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="gui.UserListController"
      spacing="15"
      style="-fx-padding: 20; -fx-background-color: #1e1e1e;">

    <!-- ✅ Bouton Modifier -->
    <Button text="Modifier Utilisateur Sélectionné"
            onAction="#handleModifyButtonClick"
            style="-fx-font-size: 16px; -fx-background-color: #ff8c00; -fx-text-fill: white; -fx-background-radius: 10; -fx-padding: 10;"/>
    <Button text="ajouter Utilisateur "
            onAction="#handleajoutButtonClick"
            style="-fx-font-size: 16px; -fx-background-color: #ff8c00; -fx-text-fill: white; -fx-background-radius: 10; -fx-padding: 10;"/>

    <!-- ✅ ScrollPane pour les cartes utilisateurs -->
    <ScrollPane fx:id="scrollPane" fitToWidth="true" fitToHeight="true" vbarPolicy="AS_NEEDED" hbarPolicy="NEVER"
                style="-fx-background: transparent;">
        <!-- ✅ FlowPane pour afficher les cartes d'utilisateurs -->
        <FlowPane fx:id="cardsContainer"
                  hgap="20" vgap="20"
                  prefWrapLength="800"
                  style="-fx-background-color: #1e1e1e; -fx-padding: 10; -fx-alignment: center;" />
    </ScrollPane>
</VBox>
