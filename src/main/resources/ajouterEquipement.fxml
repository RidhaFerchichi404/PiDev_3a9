<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="gui.AjouterEquipementController"
            style="-fx-background-color: #1a1a1a;">
    
    <VBox spacing="20" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" 
          AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="20">
        
        <Label fx:id="titleLabel" text="Ajouter un Équipement" 
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #ff8c00;"/>
        
        <VBox style="-fx-background-color: #262626; -fx-padding: 20; -fx-background-radius: 10;" spacing="15">
            <TextField fx:id="tfNom" promptText="Nom de l'équipement"
                      style="-fx-background-color: #333333; -fx-text-fill: white;"/>
            
            <CheckBox fx:id="cbFonctionnement" text="En fonctionnement"
                     style="-fx-text-fill: white;"/>
            
            <VBox spacing="5">
                <Label text="Dernière vérification" style="-fx-text-fill: #ff8c00;"/>
                <DatePicker fx:id="dpDerniereVerif" style="-fx-background-color: #333333;"/>
            </VBox>
            
            <VBox spacing="5">
                <Label text="Prochaine vérification" style="-fx-text-fill: #ff8c00;"/>
                <DatePicker fx:id="dpProchaineVerif" style="-fx-background-color: #333333;"/>
            </VBox>
        </VBox>
        
        <HBox spacing="10" alignment="CENTER">
            <Button fx:id="btnSave" text="Enregistrer" onAction="#sauvegarder"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;
                           -fx-min-width: 120; -fx-min-height: 40; -fx-background-radius: 20;
                           -fx-cursor: hand;"/>
            
            <Button text="Annuler" onAction="#annuler"
                    style="-fx-background-color: #ff4444; -fx-text-fill: white; -fx-font-weight: bold;
                           -fx-min-width: 120; -fx-min-height: 40; -fx-background-radius: 20;
                           -fx-cursor: hand;"/>
        </HBox>
    </VBox>
</AnchorPane> 