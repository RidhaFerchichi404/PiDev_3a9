<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="800.0" prefWidth="1000.0" stylesheets="@Style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="PC.gestion.gui.modifierPostsAdmin">
   <children>
      <HBox alignment="CENTER" layoutX="5.0" layoutY="4.0" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="792.0" prefWidth="991.0" spacing="40.0">
         <children>
            <FlowPane fx:id="FPposts" prefHeight="792.0" prefWidth="546.0" />
            <VBox alignment="CENTER" prefHeight="382.0" prefWidth="165.0" spacing="25.0">
               <children>
                  <Label text="Modifier la descripton" />
                  <TextField fx:id="TFdescriptionModifier" promptText="Description" />
                  <Label text="Modifier le path de l'image" />
                  <TextField fx:id="TFpathModifier" promptText="Path" />
                  <Label text="Modifier le type" />
                  <RadioButton fx:id="RBpromotionModifier" mnemonicParsing="false" text="Promotion">
                     <toggleGroup>
                        <ToggleGroup fx:id="type" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton fx:id="RBmarathonModifier" mnemonicParsing="false" text="Marathon" toggleGroup="$type" />
                  <RadioButton fx:id="RBregimeModifier" mnemonicParsing="false" text="Regime" toggleGroup="$type" />
               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="25.0">
               <children>
                  <Button fx:id="BTNmodifier" mnemonicParsing="false" onAction="#ModifierPoste" text="Modifier" />
                  <Button fx:id="BTNsupprimer" mnemonicParsing="false" onAction="#SupprimerPoste" text="Supprimer" />
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
