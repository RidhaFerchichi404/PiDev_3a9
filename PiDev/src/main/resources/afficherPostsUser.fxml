<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="528.0" prefWidth="706.0" stylesheets="@Style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="PC.gestion.gui.afficherPostsUser">
   <children>
      <VBox alignment="CENTER" prefHeight="528.0" prefWidth="706.0">
         <children>
            <HBox alignment="CENTER" prefHeight="37.0" prefWidth="600.0" spacing="100.0">
               <children>
                  <Label fx:id="LBnom" text="Label" />
                  <Label fx:id="LBdate" text="Label" />
               </children>
            </HBox>
            <ImageView fx:id="IVimage" fitHeight="285.0" fitWidth="572.0" pickOnBounds="true" preserveRatio="true" />
            <Label text="Description : " />
            <Label fx:id="LBdescription" text="Label" />
            <Label text="Commentez ici : " />
            <TextField fx:id="TFcomment" />
            <HBox alignment="CENTER" prefHeight="60.0" prefWidth="600.0" spacing="100.0">
               <children>
                  <Button fx:id="BTNback" mnemonicParsing="false" onAction="#handleBackButtonAction" text="Retourner" />
                  <Button fx:id="BTNajouterComment" mnemonicParsing="false" onAction="#addComment" text="Ajouter commentaire" />
                  <Button fx:id="BTNviewComment" mnemonicParsing="false" onAction="#handleViewCommentsButtonAction" text="Consulter les commentaires" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
