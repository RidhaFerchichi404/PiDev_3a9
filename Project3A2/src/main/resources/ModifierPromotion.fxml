<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.ModifierPromotion">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label text="Modifier la promotion" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
    <TextField fx:id="codePromoField" promptText="Code promo"/>
    <TextField fx:id="valeurReductionField" promptText="Valeur de réduction"/>
    <DatePicker fx:id="dateDebutPicker" promptText="Date de début"/>
    <DatePicker fx:id="dateFinPicker" promptText="Date de fin"/>
    <Button fx:id="enregistrerButton" text="Enregistrer" onAction="#enregistrerModifications" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
</VBox>