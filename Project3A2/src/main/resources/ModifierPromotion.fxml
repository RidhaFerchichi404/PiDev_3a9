<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="gui.ModifierPromotion"
          xmlns:fx="http://javafx.com/fxml/1"
          xmlns="http://javafx.com/javafx/23.0.1"
          prefHeight="200.0" prefWidth="400.0">

    <!-- Champs pour modifier les informations de la promotion -->
    <TextField fx:id="codePromoField" promptText="Code de la promotion" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    <TextField fx:id="descriptionField" promptText="Description" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    <TextField fx:id="typeReductionField" promptText="Type de réduction" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    <TextField fx:id="valeurReductionField" promptText="Valeur de réduction" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    <DatePicker fx:id="dateDebutPicker" promptText="Date de début" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    <DatePicker fx:id="dateFinPicker" promptText="Date de fin" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

    <Button text="Mettre à jour" onAction="#updatePromotion" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
</GridPane>
