<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="15" alignment="CENTER" prefHeight="400.0" prefWidth="500.0"
      xmlns:fx="http://javafx.com/fxml/1"
      xmlns="http://javafx.com/javafx/23.0.1"
      fx:controller="gui.ModifierAbonnement"
      style="-fx-background-color: #ECF0F1; -fx-padding: 20; -fx-border-radius: 10; -fx-background-radius: 10;">

    <!-- Titre -->
    <Label text="Modifier un Abonnement" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #1B4F72;" />

    <!-- Barre de recherche -->
    <HBox spacing="10" alignment="CENTER">
        <TextField fx:id="TFRechercheNom" promptText="Rechercher par nom"
                   style="-fx-background-color: white; -fx-border-color: #1B4F72; -fx-border-radius: 5; -fx-padding: 5;" />
        <Button fx:id="BTRechercher" onAction="#rechercherAbonnement"
                text="Rechercher"
                style="-fx-background-color: #2E86C1; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5 10; -fx-background-radius: 5;" />
    </HBox>

    <!-- Formulaire -->
    <GridPane hgap="10" vgap="10" alignment="CENTER">
        <columnConstraints>
            <ColumnConstraints minWidth="120" />
            <ColumnConstraints minWidth="200" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="30" />
            <RowConstraints minHeight="30" />
            <RowConstraints minHeight="30" />
            <RowConstraints minHeight="30" />
            <RowConstraints minHeight="30" />
        </rowConstraints>

        <Label text="Nom :" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="TFNom" GridPane.columnIndex="1" GridPane.rowIndex="0"
                   style="-fx-background-color: white; -fx-border-color: #1B4F72; -fx-border-radius: 5; -fx-padding: 5;" />

        <Label text="Description :" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="TFDescription" GridPane.columnIndex="1" GridPane.rowIndex="1"
                   style="-fx-background-color: white; -fx-border-color: #1B4F72; -fx-border-radius: 5; -fx-padding: 5;" />

        <Label text="Salle :" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="TFSalleNom" GridPane.columnIndex="1" GridPane.rowIndex="2"
                   style="-fx-background-color: white; -fx-border-color: #1B4F72; -fx-border-radius: 5; -fx-padding: 5;" />

        <Label text="Prix :" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextField fx:id="TFPrix" GridPane.columnIndex="1" GridPane.rowIndex="3"
                   style="-fx-background-color: white; -fx-border-color: #1B4F72; -fx-border-radius: 5; -fx-padding: 5;" />

        <Label text="DurÃ©e :" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <TextField fx:id="TFDuree" GridPane.columnIndex="1" GridPane.rowIndex="4"
                   style="-fx-background-color: white; -fx-border-color: #1B4F72; -fx-border-radius: 5; -fx-padding: 5;" />
    </GridPane>

    <!-- Boutons -->
    <HBox spacing="15" alignment="CENTER">
        <Button onAction="#modifierAbonnement" text="Enregistrer"
                style="-fx-background-color: #28B463; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15; -fx-background-radius: 5;" />
        <Button onAction="#naviguerVersAjout" text="Ajouter"
                style="-fx-background-color: #F39C12; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15; -fx-background-radius: 5;" />
    </HBox>

</VBox>
